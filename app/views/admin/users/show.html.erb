<div class="p-3 m-2">
  <div class="container text-center font">
    <div class="row d-flex justify-content-center pt-4">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h4 class="mb-3 text-center ">ユーザー詳細</h4>
          <table class="table text-left">
            <tr>
              <th>ユーザーアイコン</th>
              <td>
                <%= image_tag @user.get_profile_image(300, 300), 
                 class: "shadow-sm me-3", 
                 style: "width: 100px; height: 100px; object-fit: cover; border-radius: 10px;" %>
              </td>
            </tr>
            <tr>
              <th>ユーザーネーム</th>
              <td><%= @user.username %></td>
            </tr>
            <tr>
              <th>自己紹介</th>
              <td><%= @user.profile_description %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
            <tr>
               <th>ステータス</th>
               <td>
                 <% if @user.is_deleted %>
                   <%= link_to '復元', admin_user_path(@user), method: :patch, data: { confirm: '本当に復元しますか？' } %> 
                 <% else %>
                   <%= link_to '退会', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
                 <% end %>
               </td>
            </tr>
            <tr>
              <th></th>
              <td><%= link_to 'Back', admin_dashboards_path, class: 'btn btn-sm btn-outline-secondary' %></td>
            </tr>
          </table>  
      </div>
    </div>
  </div>
</div>

