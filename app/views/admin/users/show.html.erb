  <table class="table">
    <tr>
      <th>ユーザーアイコン</th>
      <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    </tr>
    <tr>
      <th>ユーザーネーム</th>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= @user.profile_description %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
    <th>ステータス</th>
    <td>
      <% if @user.is_deleted %>
        <%= link_to '復元', admin_user_path(@user), method: :patch, data: { confirm: '本当に復元しますか？' } %> 
      <% else %>
        <%= link_to '退会', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
      <% end %>
    </td>
    </tr>
</table> 

