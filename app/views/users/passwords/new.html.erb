
<div class="p-3 mb-2">
  <div class="container font pt-4">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-none-12 col-sm-12 col-md-12 col-lg-5">

        <h2>Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
              <table class="table">
                <tr>
                  <th><%= f.label :email %><br /></th>
                  <td> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                </tr>
                <tr>
                  <th></th>
                  <td> <%= f.submit "Send me reset password instructions" %></td>
                </tr>       
                <tr>
                  <th></th>
                  <td><%= render "users/shared/links" %></td>
                </tr>
             </table>
          <% end %>
      </div>
    </div>
  </div>
</div>
