<h2>プロフィール編集</h2>
<%= form_with model: @users do |f| %>

  <label for="username">Name</label>
  <%= f.text_field :username, autofocus: true, id:"username", placeholder:"名前"%>

  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  

  <%= f.submit "変更を保存" %>

<% end %>

<div id="error">
  <% if @users.errors.any? %>
  <h3><%= @users.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @users.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
</div>
