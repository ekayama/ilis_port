
<div id="error">
  <% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="p-3 mb-2">
  <div class="container pt-3 font">
    <div class="d-flex justify-content-center">
      <div class="col-sm-12 col-md-12 col-lg-9 text-start">
        <h3 class="text-left mb-4">プロフィール設定</h3>
          <%= form_with model: @user do |f| %>
            <table class="table">
              <tr>
                <th>ユーザーアイコン</th>
                <td class="pl-5">
                  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
                </td>
              </tr>
              <tr>
                <th>ユーザーネーム</th>
                <td class="pl-5">
                  <%= f.text_field :username, autofocus: true, id: "username", placeholder: "名前" %>
                </td>
              </tr>
              <tr>
                <th>自己紹介</th>
                <td class="pl-5">
                  <%= f.text_area :profile_description, id: "inputprofile_description", placeholder: "自己紹介文", rows: 3, cols: 35 %>
                </td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td class="pl-5">
                  <%= f.text_field :email, placeholder: "メールアドレス" %>
                </td>
              </tr>
              <tr>
                <th>公開・非公開</th>
                <td class="pl-5">
                  <% if @user.released? %>
                    <%= link_to '非公開にする', nonrelease_user_path(@user), method: :patch %>
                  <% else %>
                    <%= link_to '公開する', release_user_path(@user), method: :patch %>
                 <% end %>
                </td>
              </tr>
              <tr>
                <th></th>
                <td class="pl-5">
                  <%= f.submit "変更する", class: 'btn btn-sm btn-outline-info' %>
                  <%= link_to "Back", user_path(@user.id), class: 'btn btn-sm btn-outline-secondary' %>
                </td>
              </tr>
            </table>
          <% end %>

          <p class="text-center pt-2">
            <%= link_to "退会はこちら", user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？" %>
          </p>
      </div>
    </div>
  </div>
</div>






