

<div id="error">
  <% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
</div>

<div class="p-3 mb-2 font">
  <div class="container">
  <h2>プロフィール編集</h2>
  <br>
    <div class="row">
    <div class="col-8">

        <%= form_with model: @user do |f| %>
          <h4>ユーザー画像</h4>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            <br><br>
          <h4>ユーザーネーム</h4>
            <%= f.text_field :username, autofocus: true, id:"username", placeholder: "名前" %>
            <br><br>
          <h4>自己紹介</h4>
            <%= f.text_area :profile_description, id: "inputprofile_description ", placeholder: "自己紹介文" %> 
            <br>
          <h4>メールアドレス</h4>
            <%= f.text_field :email, default: "", null: false, placeholder: "メールアドレス" %>
            <br><br>
          <%= f.submit "変更を保存" %>
          <%= link_to "Back", user_path(@user.id) %>
        <% end %>
        <br><br>
        <p><%= link_to "退会はこちら", user_path(@user), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
    </div>

    <div class="d-none d-lg-block d-xl-block col-lg-4">
    何か表示したい
    </div>
    </div>
  </div>
</div>





