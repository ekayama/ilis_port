<h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.username %> さんとのチャット</h1>

<div class="message" style="width: 400px;">
  <% @chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <p style="text-align: right;"><%= chat.message %></p>
    <% else %>
      <p style="text-align: left;"><%= chat.message %></p>
    <% end %>
  <% end %>
</div>

<div id="error">
<% if @chat.errors.any? %>
<h3><%= @chat.errors.count %> errors prohibited this obj from being saved:</h3>
<ul>
  <% @chat.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @chat, data: {remote: true} do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
<% end %>
