<div class="container-fluid py-4">
  <div class="row d-lg-flex flex-wrap text-center">
    <% @records.each do |post| %>
      <!-- カードレイアウト -->
      <div class="col-6 col-md-4 col-lg-3 mb-4">
        <div class="card text-center p-3 border-0 shadow rounded" style="height: 100%; border-radius: 15px;">
          <!-- 投稿の画像 -->
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_image(250, 250), 
              class: "rounded mb-3 mx-auto border", 
              style: "width: 100%; height: 200px; object-fit: cover;" %>
          <% end %>
          
          <!-- ユーザー情報 -->
          <div class="d-flex align-items-center justify-content-center mb-3">
            <%= image_tag post.user.get_profile_image(150, 150), 
              class: "rounded-circle me-2", 
              style: "width: 50px; height: 50px; object-fit: cover;" %>
            <h6 class="mb-0 ml-2">
              <%= post.user.username %>
            </h6>
          </div>
          
          <!-- 投稿タイトル他 -->
          <div>
            <h7 class="text-dark mb-3">
              <%= link_to post.title, post_path(post), class: "text-decoration-none" %>
            </h7>
            <p class="text-muted small">
              <%= post.body.truncate(50) %> <!-- 長すぎるテキストを省略 -->
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center w-100 mt-4">
    <%= paginate @records, theme: 'bootstrap-5' %>
  </div>
</div>
