<br>
 <%= link_to new_post_path, class: 'dropdown-item nav-link text-black'  do %>
    <i class="fa-solid fa-pen-to-square"></i> 投稿フォーム
 <% end %>
<%= render "searches/form" %>
<br>

<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post) do %>
      <%= image_tag post.get_image(400, 400) %>
    <% end %><br><br>
    <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>

    <p>タイトル：<%= link_to post_path(post.id) do %>
      <%= post.title %>
    <% end %></p>

    <p>説明：<%= post.body %></p>
  </div>
   ユーザーネーム：<%= post.user.username %><br>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>

<% end %>


